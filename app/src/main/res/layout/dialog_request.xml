<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/request_dialog_border_dark_blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/simple_padding_larger"
        android:text="@string/req_dlg_title"
        android:textSize="@dimen/text_size_primary_huge" />

    <View
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/simple_padding_medium"
        android:layout_marginLeft="@dimen/simple_padding_huge"
        android:layout_marginRight="@dimen/simple_padding_huge"
        android:layout_gravity="center_horizontal"
        android:background="@color/screenColorBackground" />

    <EditText
        android:layout_gravity="center_horizontal"
        android:id="@+id/request_message"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/simple_padding_large"
        android:layout_marginRight="@dimen/simple_padding_large"
        android:layout_marginTop="@dimen/simple_padding_large"
        android:background="@color/colorTransparent"
        android:hint="@string/req_dlg_hint"
        android:inputType="textCapSentences"
        android:textSize="@dimen/text_size_primary" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/simple_padding_large"
        android:layout_marginBottom="@dimen/simple_padding_large">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/dialog_button" />

        <TextView
            android:id="@+id/send_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SEND"
            android:textAllCaps="true"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

    </FrameLayout>


</LinearLayout>