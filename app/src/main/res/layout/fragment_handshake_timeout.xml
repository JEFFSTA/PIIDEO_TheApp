    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/time_up_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hsh_time_up"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/heart_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oops_text" />


    <ImageView
        android:id="@+id/heart_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/oops_heart_no_bg"
        app:layout_constraintBottom_toTopOf="@+id/another_time_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_up_text" />

    <TextView
        android:layout_marginTop="@dimen/simple_padding_large"
        android:id="@+id/another_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hsh_help_another_time"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/text_size_primary_huge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heart_image" />

</android.support.constraint.ConstraintLayout>