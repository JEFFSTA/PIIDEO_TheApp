<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#4A546D"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@drawable/ic_oops_image" />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="8dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:gravity="center_horizontal"
                android:background="@drawable/oops_header"
                android:textColor="@color/colorWhite"
                android:padding="8dp"
                android:textSize="@dimen/text_size_primary"
                android:textAllCaps="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Header no one can help you" />
            <!--android:textColor="@color/colorOopsButton"-->
            <TextView
                android:textSize="16sp"

                android:layout_gravity="center_horizontal"
                android:layout_margin="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No one can help you" />
            <!--android:theme="@style/OopsButtonStyle"-->
            <Button

                android:layout_gravity="center_horizontal"
                android:text="redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>