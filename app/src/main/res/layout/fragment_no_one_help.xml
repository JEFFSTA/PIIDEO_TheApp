<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A546D">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="80dp"
        app:srcCompat="@drawable/ic_oops_image" />

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/oops_header"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="@string/no_title"
                android:textAllCaps="true"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />
            <!--android:textColor="@color/colorOopsButton"-->

            <TextView
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:text="@string/no_info"
                android:textColor="#7792CC"
                android:textSize="18sp" />

            <Button
                android:textAllCaps="false"
                android:id="@+id/redirect"
                style="@style/OopsButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/no_btn" />
            <!--<Button-->
            <!--android:id="@+id/next"-->
            <!--android:textAllCaps="false"-->
            <!--android:text="Choose Subject"-->
            <!--style="@style/ButtonStyle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center" />-->

        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>