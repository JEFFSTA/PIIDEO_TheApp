<resources>

    <style name="AppTheme.ChatTheme" parent="AppTheme.Base.NoActionBar">
        <item name="android:windowBackground">@drawable/chat_bg</item>
        <!--<item name="android:windowFullscreen">true</item>-->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/screenColorBackground</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/screenColorBackground</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme.Base.NoActionBar" />

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorButton</item>
        <item name="android:background">@drawable/button_oval</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorRequestDialogBorder</item>
        <!--<item name="android:progressBackgroundTint">@color/colorWhite</item>-->
    </style>

    <style name="OopsButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorOopsButton</item>
        <item name="android:background">@drawable/button_oval</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>


</resources>
