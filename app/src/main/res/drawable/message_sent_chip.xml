<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="2px">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners
                android:radius="20dp"
                android:topRightRadius="0dp" />

            <solid android:color="#33222222" />



        </shape>
    </item>

    <item android:top="2px" android:bottom="2px" android:right="2px">
        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners
                android:radius="20dp"
                android:topRightRadius="0dp" />

            <solid android:color="#66222222" />



        </shape>
    </item>

    <item android:bottom="4px" android:right="4px" >

        <shape
            android:dither="true"
            android:shape="rectangle">

            <corners
                android:radius="20dp"
                android:topRightRadius="0dp" />

            <solid android:color="@color/screenColorBackground" />



        </shape>

    </item>



</layer-list>